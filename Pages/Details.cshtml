@page
@model FociWeb_App.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Meccs Infó</h1>

<div>
    <h4>Meccs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Forduló
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.Fordulo)
        </dd>
        <dt class="col-sm-2">
            Hazai Végeredmény
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.HazaiVeg)
        </dd>
        <dt class="col-sm-2">
            Vendég Végeredmény
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.VendegVeg)
        </dd>
        <dt class="col-sm-2">
            Hazai Félidő
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.HazaiFel)
        </dd>
        <dt class="col-sm-2">
            Vendég Félidő
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.VendegFel)
        </dd>
        <dt class="col-sm-2">
            Hazai Csapat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.HazaiCsapat)
        </dd>
        <dt class="col-sm-2">
            Vendeg Csapat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.VendegCsapat)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./AdatbazisSzerkesztes" asp-route-id="@Model.Meccs.Id">Szerkesztés</a> |
    <a asp-page="./Index">Vissza a meccsekhez</a>
</div>
