@page
@model FociWeb_App.Pages.DeleteModel

@{
    ViewData["Title"] = "Törlés";
}

<h1>Törlés</h1>

<h3>Biztos kitörlöd ezt a meccset?</h3>
<div>
    <h4>Meccs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Forduló
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.Fordulo)
        </dd>
        <dt class="col-sm-2">
            Hazai Végeredmény
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.HazaiVeg)
        </dd>
        <dt class="col-sm-2">
            Vendég Végeredmény
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.VendegVeg)
        </dd>
        <dt class="col-sm-2">
            Hazai Félidő
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.HazaiFel)
        </dd>
        <dt class="col-sm-2">
            Vendég Félidő
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.VendegFel)
        </dd>
        <dt class="col-sm-2">
            Hazai Csapat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.HazaiCsapat)
        </dd>
        <dt class="col-sm-2">
            Vendég Csapat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meccs.VendegCsapat)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Meccs.Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-page="./Index">Mégse</a>
    </form>
</div>
